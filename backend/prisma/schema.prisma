generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  active    Boolean  @default(true)

  name        String
  cpnj        String  @unique
  slug        String  @unique
  email       String
  phoneNumber String?

  users User[]

  @@map("tenants")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  active    Boolean  @default(true)

  login    String @unique
  password String
  name     String
  email    String @unique
  role     Role   @default(TENANT_USER)

  tenant   Tenant @relation(fields: [tenantId], references: [id])
  tenantId String

  @@map("users")
}

enum Role {
  ADMIN
  CORA_MANAGER
  TENANT_ADMIN
  TENANT_USER
}
